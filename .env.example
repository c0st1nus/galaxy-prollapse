# infra: postgres
POSTGRES_DB=cleaning_db
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432

# infra: minio (also used by backend in compose full profile)
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=school-hackathon
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# backend service port in docker compose full profile
PORT=3000

# optional override when backend runs inside docker compose full profile
# keep this aligned with postgres credentials above if you customize both.
DOCKER_DATABASE_URL=postgres://user:password@db:5432/cleaning_db
MINIO_ENDPOINT_DOCKER=minio
MINIO_INTERNAL_PORT=9000
MINIO_USE_SSL=false

# frontend build/runtime
PUBLIC_API_BASE_URL=http://localhost:3000
PUBLIC_ENABLE_DEV_UI=0
