{
  "name": "cleaning-app",
  "version": "1.0.0",
  "scripts": {
    "setup": "bun run scripts/setup.ts",
    "install:all": "bun install && bun install --cwd backend && bun install --cwd web",
    "infra:up": "docker compose up -d db minio",
    "infra:down": "docker compose down",
    "infra:reset": "docker compose down -v",
    "infra:ps": "docker compose ps",
    "dev": "concurrently \"bun run dev:back\" \"bun run dev:front\"",
    "dev:quick": "concurrently \"bun run dev:back\" \"bun run dev:front:quick\"",
    "dev:back": "bun run --cwd backend dev",
    "dev:front": "bun run --cwd web dev",
    "dev:front:quick": "cross-env PUBLIC_ENABLE_DEV_UI=1 bun run --cwd web dev",
    "build": "bun run build:back && bun run build:front",
    "build:back": "bun run --cwd backend build",
    "build:front": "bun run --cwd web build",
    "prod": "bun run build && bun run start",
    "start": "concurrently \"bun run start:back\" \"bun run start:front\"",
    "start:back": "bun run --cwd backend dist/index.js",
    "start:front": "bun run --cwd web preview",
    "docker:build": "docker build -f backend/Dockerfile backend -t galaxy-backend:latest",
    "docker:up": "docker compose --profile full up -d --build",
    "docker:down": "docker compose --profile full down"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3"
  }
}
