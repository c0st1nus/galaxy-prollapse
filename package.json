{
  "name": "cleaning-app",
  "version": "1.0.0",
  "scripts": {
    "setup": "bun run scripts/setup.ts",
    "install:all": "bun install && bun install --cwd backend && bun install --cwd web",
    "infra:up": "docker compose up -d db minio",
    "infra:down": "docker compose down",
    "infra:reset": "docker compose down -v",
    "infra:ps": "docker compose ps",
    "dev": "concurrently \"bun run dev:back\" \"bun run dev:front\"",
    "dev:back": "bun run --cwd backend dev",
    "dev:front": "bun run --cwd web dev",
    "build": "bun run build:aws",
    "build:back": "bun run --cwd backend build",
    "build:front": "bun run --cwd web build",
    "build:aws": "bun run build:back && bun run build:front",
    "deploy:aws": "bun run build:aws"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
